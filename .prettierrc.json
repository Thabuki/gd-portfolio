{
  "useTabs": true,
  "tabWidth": 2,
  "printWidth": 100,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "semi": true,
  "trailingComma": "none",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "printWidth": 100,
        "singleAttributePerLine": false
      }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "printWidth": 100
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "proseWrap": "preserve"
      }
    }
  ]
}
